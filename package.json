{
  "name": "@progress/kendo-angular-jest-preset",
  "version": "0.0.0-semantically-released",
  "description": "Jest preset configuration for Kendo UI for Angular, based on original work by Michał Pierzchała",
  "main": "index.js",
  "typings": "index.d.ts",
  "repository": {
      "type": "git",
      "url": "https://github.com/telerik/kendo-angular-jest-preset.git"
  },
  "author": "Progress",
  "license": "BSD-3",
  "scripts": {
    "test": "jest",
    "test:ci": "jest -i",
    "semantic-release": "semantic-release pre && semantic-prerelease publish --public && semantic-release post"
  },
  "release": {
    "debug": false,
    "branchTags": {
      "develop": "dev"
    },
    "fallbackTags": {
      "dev": "latest"
    },
    "analyzeCommits": "@telerik/semantic-prerelease/analyzeCommits",
    "generateNotes": "@telerik/semantic-prerelease/generateNotes",
    "getLastRelease": "@telerik/semantic-prerelease/getLastRelease",
    "verifyConditions": "@telerik/semantic-prerelease/verifyConditions",
    "verifyRelease": "@telerik/semantic-prerelease/verifyRelease"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-push": "npm run test",
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    }
  },
  "dependencies": {
    "jest-zone-patch": "^0.0.7",
    "jsdom": "^11.3.0",
    "ts-jest": "^21.2.3"
  },
  "devDependencies": {
    "@telerik/semantic-prerelease": "^1.2.1",
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^2.0.2",
    "jest": "^21.2.1",
    "jest-cli": "^21.0.1",
    "semantic-release": "^6.3.6",
    "typescript": "^2.6.2",
    "validate-commit-msg": "^2.14.0"
  },
  "peerDependencies": {
    "jest-cli": "^21.0.1"
  }
}
